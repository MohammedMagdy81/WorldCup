<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BC8BDD2B"

    tools:context=".ui.DetailesActivity">

    <TextView
        android:id="@+id/match_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="2011"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/text_team2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/match_year"
        app:layout_constraintEnd_toStartOf="@id/text_team2_goals"
        android:padding="12dp"
        android:textSize="18sp"
        android:gravity="start"
        android:layout_marginStart="16dp"
        android:text="Brazil"
        />
    <TextView
        android:id="@+id/text_team1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/match_year"
        app:layout_constraintStart_toEndOf="@id/text_team1_goals"
        android:padding="16dp"
        android:textSize="18sp"
        android:gravity="end"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="6dp"
        android:text="Germany"
        />
    <TextView
        android:id="@+id/text_team1_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/text_team1"
        app:layout_constraintTop_toTopOf="@id/text_team1"
        app:layout_constraintBottom_toBottomOf="@id/text_team2"
        app:layout_constraintStart_toEndOf="@id/dash"
        android:padding="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="22sp"
        android:text="7"
        />
    <TextView
        android:id="@+id/text_team2_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_team2"
        app:layout_constraintTop_toTopOf="@id/text_team2"
        app:layout_constraintBottom_toBottomOf="@id/text_team2"
        app:layout_constraintEnd_toStartOf="@id/dash"
        android:padding="12dp"
        android:textSize="22sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="0"
        />
    <TextView
        android:id="@+id/dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        app:layout_constraintStart_toEndOf="@id/text_team2_goals"
        app:layout_constraintTop_toTopOf="@id/text_team2_goals"
        app:layout_constraintEnd_toStartOf="@id/text_team1_goals"
        app:layout_constraintBottom_toBottomOf="@id/text_team2_goals"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/stadium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8sp"
        android:text="Cairo"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_team1_goals" />


</androidx.constraintlayout.widget.ConstraintLayout>